
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cadastro {
  id         String    @id @default(uuid())
  name       String   
  surname    String
  password   String
  role       String
  login      String    @unique
  chamados   Chamado[] @relation("CadastroChamados")

  @@unique([name, surname])   
}

model Chamado {
  id          String    @id @default(uuid())
  motivo      String
  setor       String
  comment     String
  files       String[]  
  cadastroId  String
  cadastro    Cadastro @relation("CadastroChamados", fields: [cadastroId], references: [id])
}
