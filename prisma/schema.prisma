
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cadastro {
  id         String    @id @default(uuid())
  name       String    @unique
  surname    String
  password   String
  chamados   Chamado[] @relation("CadastroChamados")
}

model Chamado {
  id          String    @id @default(uuid())
  motivo      String
  setor       String
  comment     String
  files       String[]  
  username    String
  cadastro    Cadastro @relation("CadastroChamados", fields: [username], references: [name])
}
